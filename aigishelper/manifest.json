{
	"name": "Aigis Helper",
	"version": "0.1.2",
	"description": "Aigis Helper",
	
	"background": {
		"page": "background.html"
	},
	
	"externally_connectable": {
		"matches": [
			"*://*.dmm.com/*",
			"*://*.dmm.co.jp/*",
			"*://assets.millennium-war.net/*",
			"*://millennium-war.net/*"
		]
	},
	
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	
	"permissions": [
		"*://*.dmm.com/*",
		"*://*.dmm.co.jp/*",
		"*://*.millennium-war.net/*",
		"storage"
	],
	
	"content_scripts": [
		{
			"matches": [
				"*://*.millennium-war.net/*"
			],
			"run_at": "document_start",
			"all_frames": true,
			"js": [
				"js/jquery-3.0.0.min.js",
				"js/httpcapture.js"
			]
		}
	],

	"manifest_version": 2
}
